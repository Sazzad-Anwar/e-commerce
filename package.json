{
    "name": "e-commerce-application",
    "version": "1.0.3",
    "description": "",
    "main": "app.js",
    "scripts": {
        "server-install": "yarn && yarn add -D nodemon morgan concurrently && yarn add axios bcryptjs cors dotenv express express-async-handler multer mongoose uuid helmet nanoid winston cookie-parser jsonwebtoken colors auth-middleware-jwt",
        "start": "node app.js",
        "dev-server": "nodemon -L app.js",
        "client": "cd client && yarn dev",
        "build-client": "cd client && yarn build",
        "client-install": "cd client && yarn && yarn lint && yarn install-packages",
        "install-all": "yarn server-install && yarn client-install",
        "dev": "concurrently \"yarn dev-server\" \"yarn client\"",
        "docker-build-start-dev": "docker-compose -f docker-compose.yaml -f docker-compose.dev.yaml up -d --build",
        "docker-start-dev": "docker-compose -f docker-compose.yaml -f docker-compose.dev.yaml up -d",
        "docker-stop-dev": "docker-compose -f docker-compose.yaml -f docker-compose.dev.yaml down",
        "docker-build-start-prod": "docker-compose -f docker-compose.yaml -f docker-compose.prod.yaml up -d --build",
        "docker-start-prod": "docker-compose -f docker-compose.yaml -f docker-compose.prod.yaml up -d",
        "docker-stop-prod": "docker-compose -f docker-compose.yaml -f docker-compose.prod.yaml down",
        "request-handle-check": "autocannon -c 12 http://localhost:8080",
        "prod-server-start": "pm2 start app.js -i max",
        "prod-server-stop": "pm2 stop app.js"
    },
    "keywords": [
        "MERN Framework, Next.js, redux, node, express, mongoDB"
    ],
    "author": "Md Sazzad Bin Anwar",
    "license": "ISC",
    "dependencies": {
        "auth-middleware-jwt": "^1.0.16",
        "autocannon": "^7.4.0",
        "axios": "^0.21.1",
        "bcryptjs": "^2.4.3",
        "colors": "^1.4.0",
        "cookie-parser": "^1.4.5",
        "cors": "^2.8.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4",
        "helmet": "^4.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.0.0",
        "multer": "^1.4.3",
        "nanoid": "^3.1.25",
        "nodemailer": "^6.6.3",
        "pm2": "^5.1.1",
        "redis": "^3.1.2",
        "sequelize": "^6.6.5",
        "uuid": "^8.3.2",
        "winston": "^3.3.3"
    },
    "devDependencies": {
        "concurrently": "^6.2.1",
        "morgan": "^1.10.0",
        "nodemon": "^2.0.12"
    }
}
